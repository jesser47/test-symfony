{% extends 'base.html.twig' %}

{% block title %}Serveur List{% endblock %}

{% block body %}
<h1>Serveur List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for serveur in serveurs %}
            <tr>
                <td>{{ serveur.nom }}</td>
                <td>{{ serveur.dateNaissance ? serveur.dateNaissance|date('Y-m-d') : 'N/A' }}</td>
                <td>
                    <a href="{{ path('app_serveur_details', { id: serveur.id }) }}" class="btn btn-info btn-sm">Details</a>
                    <a href="{{ path('app_serveur_edit', { id: serveur.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                    <a href="{{ path('app_serveur_delete', { id: serveur.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No servers found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('app_serveur_new') }}" class="btn btn-success mt-3">Add New Serveur</a>
{% endblock %}
